@model Note_Book.Entity.Anime

@{
    ViewData["Title"] = "Anime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 1%;">    
    <div class="col-lg-12">
        <img src="@Url.Content(Model.BannerUri)" alt="banner" class="panel-entity-banner-img" />            
    </div>
</div>

<div class="row" style="margin-top: 1%;">
    <div class="col-lg-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <img src="@Url.Content(Model.IcoUri)" alt="Image" class="panel-entity-ico-img" />
                <table class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <td>Title:</td>
                            <td>@Model.Name</td>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <td>Author:</td>
                            <td>@Model.AuthorName</td>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <td>Air Date:</td>
                            <td>@Model.AirDate</td>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <td>Episodes:</td>
                            <td>@Model.NumEpisodes</td>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <td>Status:</td>
                            <td>Ongoing</td>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <td>Rating:</td>
                            <td>@Model.Rating</td>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <td>Genres:</td>
                            <td>@Model.Genres.Replace(";", ", ")</td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Description</h3>
            </div>
            <div class="panel-body">
                <p style="white-space: pre-line">@Model.Desc</p>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Related</h3>
            </div>
            <div class="panel-body">
                @{
                    foreach (var item in Model.Related)
                    {
                        <div class="panel-entity-div">
                            <img src="@Url.Content(item.Value)" alt="Image" class="panel-entity-img" />
                            <p align="center">@item.Key</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Links</h3>
            </div>
            <div class="panel-body">
                @{ 
                    foreach(var item in Model.Links)
                    {
                        <a href="@item">@item</a><br />

                    }
                }
            </div>
        </div>
    </div>
</div>


<style type="text/css">
    img.panel-entity-banner-img {
        width: 100% !important;
        height: 400px !important;
    }

    img.panel-entity-ico-img {
        width: 100% !important;
        height: 90% !important;
        margin-bottom: 4%;
    }

    div.custom-row{
        margin-left: 4%;
    }

    img.panel-entity-img {
        width: 100% !important;
        height: 90% !important;
    }

    div.panel-entity-div {
        width: 120px !important;
        height: 200px !important;
        float: left;
        margin-right: 1.5%;
        margin-bottom: 1%;
    }
    
</style>
