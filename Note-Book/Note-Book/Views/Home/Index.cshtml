@model HomeModel
@{
    ViewData["Title"] = "Home";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="margin-top: 1%;">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/PC-Games-banner.jpg" alt="AC Game" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    PC Games
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Anime-banner.jpg" alt="Games" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Animes watched
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Xbox-Games-banner.jpg" alt="Anime" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    XBOX games
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/TV-Series-banner.jpg" alt="TV Series" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    TV Series watched
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row" style="margin-top: 2%;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Anime <a href="@Url.Action("Index", "Home")" class="btn btn-xs btn-primary pull-right">more</a>                    
                </h3>            
            </div>
            <div class="panel-body" style="margin-left: 1.25%;">
                @foreach (var anime in Model.AnimeModel.Anime) { 
                        @Html.Partial("_PanelEntity", anime)
                }
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Web Novels <a href="@Url.Action("Index", "Home")" class="btn btn-xs btn-primary pull-right">more</a>
                </h3>
            </div>
            <div class="panel-body" style="margin-left: 1.25%;">
                @foreach (var webNovel in Model.WebNovelsModel.WebNovels) { 
                    @Html.Partial("_PanelEntity", webNovel)
                }
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    TV Series <a href="@Url.Action("Index", "Home")" class="btn btn-xs btn-primary pull-right">more</a>
                </h3>
            </div>
            <div class="panel-body" style="margin-left: 1.25%;">
                @foreach (var tvShow in Model.TvShowsModel.TvShows) { 
                    @Html.Partial("_PanelEntity", tvShow)
                }
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    PC Games <a href="@Url.Action("Index", "Home")" class="btn btn-xs btn-primary pull-right">more</a>
                </h3>
            </div>
            <div class="panel-body" style="margin-left: 1.25%;">
                @foreach (var pcGame in Model.PcGamesModel.PcGames) { 
                    @Html.Partial("_PanelEntity", pcGame)
                }
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    XBOX Games <a href="@Url.Action("Index", "Home")" class="btn btn-xs btn-primary pull-right">more</a>
                </h3>
            </div>
            <div class="panel-body" style="margin-left: 1.25%;">
                @foreach (var xboxGame in Model.XboxGamesModel.XboxGames) { 
                    @Html.Partial("_PanelEntity", xboxGame)
                }
            </div>
        </div>
    </div>
</div>
